script
	$(function () {
		var lightSensorData = []
			, lightGraph = $('#light-sensor-graph');

		
		var socket = io.connect('http://184.73.237.221:3000');
		//var socket = io.connect('http://localhost:3000');
		
		
		var options = {
			colors: ['#123658', '#000000'],
			series: {
				lines: { show: true, lineWidth: 2 },
				points: {
					show: true
				}
			},
			shadowSize: 5,
			grid: {
				hoverable: true,
				clickable: false,
				borderWidth: 1,
				backgroundColor: '#ddf0ff'
			},
			legend: {
				show: false
				//position: "nw"
			},
			xaxis: {
				mode: "time",
				timeformat: "%m/%d/%y",
				minTickSize: [1, "second"] 
			}
		};
		
		socket.on('sensor_event', function (data) {
			console.log(data);
			var point = [];
			point[0] = (new Date(data.timestamp)).getTime();
			point[1] = data.value;
			lightSensorData.push(point);
			
			$.plot(lightGraph, lightSensorData, options);
		});
		
		//$.plot(lightGraph, [ d1, d2, d3 ]);
	});