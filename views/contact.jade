extends layout

block content

  section.header
      header
        include /includes/nav/main

  section#main(role="main")
    div(id="contact", class="content-module middle")
      h3(class="page-heading nav-section") 
        div Contact
        | <i class="icon-glyph icon-logo" aria-hidden="true"></i>
      div.page-content

        div#wufoo-wrapper
          p If you have any questions, please don't hesitate to contact us.
          form#wufoo-form.wufoo.topLabel.page(name='wufoo-form', autocomplete='off', enctype='multipart/form-data', method='post', novalidate='novalidate', action='https://bitponics.wufoo.com/forms/m7x4a3/#public')
            ul
              li#foli1.notranslate
                span
                  input#Field1.field.text.fn(name='Field1', type='text', value='', size='8', placeholder="Your Name")
              li#foli9.notranslate
                div
                  input#Field9.field.text.medium(name='Field9', type='email', spellcheck='false', value='', maxlength='255', required='required', placeholder="Your Email")
              li#foli10.notranslate
                div
                  textarea#Field10.field.textarea.medium(name='Field10', spellcheck='true', rows='10', cols='50', onkeyup='', required='required', placeholder="Message")
              li.buttons
                div
                  input#saveForm.btTxt.submit(name='saveForm', type='submit', value='Submit')
              li(style="display:none")
                label(for='comment') Do Not Fill This Out
                textarea#comment(name='comment', rows='1', cols='1')
                input#idstamp(type='hidden', name='idstamp', value='xVmCHDgBdsFKJJFeoSp9kQtNvTSwMA8YEVaUrbBSI9M=')




        div#email-sub
          p 
            | To stay updated, sign up for our mailing list.
          form(action="http://bitponics.us2.list-manage1.com/subscribe/post?u=68c690cb49ec37200919b6e55&amp;id=9b5ad31a92", method="post", id="mc-embedded-subscribe-form", name="mc-embedded-subscribe-form", class="validate", target="_blank")
            input(type="email", value="", name="EMAIL", class="subscribe", id="mce-EMAIL", placeholder="Email", required)
            input(type="submit", value="Subscribe", name="subscribe", id="mc-embedded-subscribe", class="button")

block footer-scripts
  script
    //eval any page inline scripts (like Wufoo form scipt)
    $('div.script').each(function(){
      eval($(this).text())
    });
