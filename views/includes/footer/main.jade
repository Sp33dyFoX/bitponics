script(type="text/javascript")
  window.raiseIntercomDialog = function(message) {
    var $ = window.$;

    if (!$) {
      return;
    }

    $("#IntercomTab").click();
    if (!$('#IntercomNewMessageContainer').is(':visible')) {
      $('.new_message').click();
    }
    $('#newMessageBody').focus();
    if (message) {
      return $('#newMessageBody').text(message);
    }
  };

