extends layout

block css

block content
  section.header
    header
      include includes/nav/main

  section#main(role="main", class="main")
    div(id="buy", class="content-module middle")
        h3(class="page-heading nav-section")
            | You can now order the Bitponics device.

        h3.sub-heading 

        div(class="page-content")

            //- p You can now order the Bitponics device at a 20% discount. This is a limited run of 50, so don't sleep on it.

            img(src="/assets/img/home/Bitponics_Hssld_H4D_0085.jpg", alt="Bitponics Device")


            div.retail-price
                  span.dollar-sign $
                  span.price-number 499
                  div.additional-text
                        span Retail 
                        span Price


            div.center.preorder-price
                  span.dollar-sign $
                  span.price-number 499
                  div.additional-text
                        span Preorder &nbsp;
                        span Offer

            div(class="center clearfix")
                  div.braintree
                        form(action="/buy/create_transaction", method="POST", id="braintree-payment-form")
                              p
                                    label Card Number
                                    input(type="text", size="20", autocomplete="off", data-encrypted-name="number")
                              p
                                    label CVV
                                    input(type="text", size="4", autocomplete="off", data-encrypted-name="cvv")
                              p
                                    label Expiration (MM/YYYY)
                                    input(class="display-ib", type="text", size="2", name="month")
                                    input(class="display-ib", type="text", size="4", name="year")
                              
                              input(type="submit", id="submit")


block footer-scripts
      script(type="text/javascript", src="https://js.braintreegateway.com/v1/braintree.js")
      script
            // var braintree = Braintree.create("");
            // braintree.onSubmitEncryptForm('braintree-payment-form');
            var ajax_submit = function (e) {
                  form = $('#braintree-payment-form');
                  e.preventDefault();
                  $("#submit").attr("disabled", "disabled");
                  $.post(form.attr('action'), form.serialize(), function (data) {
                        form.parent().replaceWith(data);
                  });
            };
            var braintree = Braintree.create("");
            braintree.onSubmitEncryptForm('braintree-payment-form', ajax_submit);