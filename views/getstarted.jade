extends layout

block content

  section.header
      header
        include /includes/nav/main

  section#main(role="main")
    div(id="getstarted", class="content-module middle")
      h3(class="page-heading nav-section")
        | Register for your bitponics account.
      ul
        li Get access to preorder offers
        li Receive news and announcements
        li Third incentive

      - if (typeof error != 'undefined' && error.length)
          p #{error}
      - else
          div(class="page-content")
            form(id="register-form", method="POST", action="/signup")
              label(for="email") Email
              input(id="email", name="email", type="email", autofocus="autofocus", required) 
              label(for="password") Password
              input(id="password", name="password", type="password", required) 
              input(id="newsletter-checkbox", name="newsletter", type="checkbox", class="inline")
              label.inline Sign up for the Bitponics newsletter
              input(type="submit", value="Submit")

  section#footer

block footer-scripts
