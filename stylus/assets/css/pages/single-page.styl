.single-page
  
  .main
    a
      color color-logo-green

  .icon-glyphlogo-new
    display none!important //hide big logo

  .main, .footer
    max-width 60em
    margin 0 auto
    width 95%

  .main
    margin 3em auto

		.content-module
			padding-top 1.5em

  .footer
    background none!important
    height auto!important
    // width 100%
    min-height 10em!important
    padding 0
    font-size 1em

    div
      position static

  .page-content,
  .page-heading
    width 100%



  //specific page overrides
  #installs 
    .contact-wrapper
      display block

      p
        float none
        border none
        width auto
        margin-left 0

  #installs, #contact
    form
      background transparent!important
      color color-text-gray!important

  #contact, #team
    background white
    div, p, a, h3
      background transparent!important
      color color-text-gray!important
      border-color color-logo-green


