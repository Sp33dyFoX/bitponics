@import "../components/select2"

.garden-history,
.app-page.garden-history
	
	.page-heading
		font-size 2.5em

	svg 
		text
			fill color-text-gray
			font-size .8em

		path
			
			&.line
				fill: none;
				stroke: color-text-gray;
				stroke-width: 1.5px;
			
			&.area
				fill: #e7e7e7;

		.axis
			shape-rendering: crispEdges;

			&.x
				.minor
					stroke-opacity: .5;
		
			line, path
				fill: none;
				stroke: color-text-gray;
		
