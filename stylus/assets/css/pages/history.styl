@import "../components/select2"

.garden-history,
.app-page.garden-history
	
	.page-heading
		font-size 2.5em

	svg text
		fill color-text-gray

	path.line
		fill: none;
		stroke: color-text-gray;
		stroke-width: 1.5px;

	path.area
		fill: #e7e7e7;

	.axis
		shape-rendering: crispEdges;

	.x.axis .minor
		stroke-opacity: .5;

	.x.axis line, .x.axis path,
	.y.axis line, .y.axis path
		fill: none;
		stroke: color-text-gray;

	