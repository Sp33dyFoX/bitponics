.slides
	li
		position relative
		overflow hidden
.flex-direction-nav
	// position absolute
	// top 0
	position relative
	top -8em
	color white
	z-index 3
	width 100%

	li
		position absolute
		width 100%

	a
		color white
		display block
		position absolute

	.flex-prev
		left 1em

	.flex-next
		right 1em

	i
		color white
		font-size 3em


#howitworks
	p
		text-align left
		color color-text-gray
		margin 1em

#team, #contact
	background color-light-gray-bg
