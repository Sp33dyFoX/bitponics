@import "../components/select2"

.dashboard
	
	&.app-page .page-heading 
		font-size 2.25em

	.content-module
		@extends .display-ib
		&.middle
			// position relative
			// padding 100% 0 0 0 //must match container width
			// height 0
			width 60%
		&.side
			width 20%

	.data-module

		.main-heading.right 
			right 0.75em
			text-align: right

		&.phase-info
			height 3.2em

			.phase-name
				position: absolute;
				top: 0.5em;
				font-size: 1em;
				left: .5em;
				text-transform: none;

			.phase-day
				position: absolute;
				top: 1.5em;
				font-size: 1em;
				left: .5em;
				text-transform: none;
			
		.sensor-value
			font-size: 3em;
			// line-height: 2em;
			// margin: 0 auto;
			text-align: left;
			left: 0.25em;
			position relative

	select
		// margin 0

	.page-heading-small
		color color-text-gray
		border-bottom 1px solid color-border-gray
		padding-bottom .5em

		&.time 
			font-size 1em

		.spinner 
			float right

	
	.controls
		.page-heading-small
				margin-bottom 0

	.control

		h3
			text-align left
			color color-text-gray
			font-size .85em

		.icon-glyph-new
			position: absolute;
			width: 100%;
			height: 100%;
			vertical-align: middle;
			top: 38%;
			font-size: 1.5em;

	.notifications
		
		.upcoming
			color color-logo-green

		.smaller
			font-size 1em
			border none
		.date
			font-size .75em
		.title
			font-size 1em
			margin 0 0 1em

		input[type="checkbox"]
			@extends .display-ib
			opacity 1
			margin 1em 1em 0 0
			height 1em
			width 1em
			font-size 1em
		label
			@extends .display-ib
			position relative
			top .75em
			margin 0


	.date
		margin-bottom 0
		border 0 none
		position relative

	.overlay
		top 8em
		overflow hidden

		&.photo
			// top 5%
			// left 10%
			// right 10%
			// width auto
			// height auto
			// position absolute

			width: 100%;
			height: 100%;
			top: 0;
			right: 0;
			left: 0;
			text-align center

			img
				@extend .display-ib;
				max-height 100%
				width auto
				padding 0 0 4em 0


			.content-module
				width 100%
				text-align center

		.overlay-data
			.left, .right
				float left
				width 45%
				margin 0 5% 0 0

				div
					font-size 2em
					color color-logo-green
				p
					margin-top 1.25em

			h4
				margin 1em 0 0

			h5.reading-time
				margin 0

		.sparkline
			margin 1em 0
			width 100%
			overflow scroll

		.page-heading
			font-size: 2em;
			text-align: left;
			// margin: 0 .5em 0;
		
		.flush-left
			margin-left 0

		.close
			margin 0

	.grid
		width 80%
		text-align right
		height 4em
		overflow hidden
		//margin 1em auto 0
		li
			// @extends .display-ib
			cursor pointer
			float right
			width 4em
			height 4em
			overflow hidden
			vertical-align top
			margin 0 0 .25em
			border 1px solid #fff

			img 
				height 100%
				width auto
	.btn
		padding: 0.5em;

	.manual-entry-form
		.btn
			margin-bottom 1em


.circle
	margin 1.5em 0
	svg
		max-width 100%

