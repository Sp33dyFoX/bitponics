@import "../components/select2"
@import "../forms"
@import "../global/breakpoints"

.dashboard
	
	&.app-page .page-heading 
		font-size 2.25em

	.data-module

		.main-heading.right 
			right 0.75em
			text-align: right

		&.phase-info
			height 3.2em

			.phase-name
				position: absolute;
				top: 0.5em;
				font-size: 1em;
				left: .5em;
				text-transform: none;

			.phase-day
				position: absolute;
				top: 1.5em;
				font-size: 1em;
				left: .5em;
				text-transform: none;
			
		.sensor-value
			font-size: 3em;
			// line-height: 2em;
			// margin: 0 auto;
			text-align: left;
			left: 0.25em;
			position relative

		.sensor-type
			.icon-glyph
				width: 60px;
				height: 60px;
				position: absolute;
				top: -.25em;
				right: -.25em;

	select
		// margin 0

	.page-heading-small
		color color-text-gray
		border-bottom 1px solid color-border-gray
		padding-bottom .5em

		&.time 
			font-size 1em

		.spinner 
			float right

	
	.controls
		.page-heading-small
				margin-bottom 0

	.control

		h3
			text-align left
			color color-text-gray
			font-size .85em

		.icon-glyph-new
			position: absolute;
			width: 100%;
			height: 100%;
			vertical-align: middle;
			top: 38%;
			font-size: 1.5em;

	.notifications
		
		.upcoming
			color color-logo-green

		.smaller
			font-size 1em
			border none
		.date
			font-size .75em
		.title
			font-size 1em
			margin 0 0 1em

		input[type="checkbox"]
			@extends .display-ib
			opacity 1
			margin 1em 1em 0 0
			height 1em
			width 1em
			font-size 1em
		label
			@extends .display-ib
			position relative
			top .75em
			margin 0


	.date
		margin-bottom 0
		border 0 none
		position relative

	.overlay
		top 8em
		// top 10%
		left 25%
		width 40%
		overflow hidden

		&.photo
			// top 5%
			// left 10%
			// right 10%
			// width auto
			// height auto
			// position absolute

			width: 100%;
			height: 100%;
			top: 0;
			right: 0;
			left: 0;
			text-align center

			img
				@extend .display-ib;
				max-height 100%
				width auto
				padding 0 0 4em 0


			.content-module
				width 100%
				text-align center

		.overlay-data
			.left, .right
				float left
				width 45%
				margin 0 5% 0 0

				div
					font-size 2em
					color color-logo-green
				p
					margin-top 1.25em

			h4
				margin 1em 0 0

			h5.reading-time
				margin 0

		.sparkline
			margin 1em 0
			width 100%
			overflow scroll

		.page-heading
			font-size: 2em;
			text-align: left;
			// margin: 0 .5em 0;
		
		.flush-left
			margin-left 0

		.close
			margin 0

	.grid
		width 80%
		text-align right
		height 4em
		overflow hidden
		//margin 1em auto 0
		li
			// @extends .display-ib
			cursor pointer
			float right
			width 4em
			height 4em
			overflow hidden
			vertical-align top
			margin 0 0 .25em
			border 1px solid #fff

			img 
				height 100%
				width auto
	.btn
		padding: 0.5em;

	.sensor-reading-group
		@extends .clear-b
		@extends .full-width

	.manual-entry-container
		.btn
			i
				font-size: 1.25em;
				position: relative;
				top: .12em;
				left: -.5em;

	.manual-entry-form

		.sensor-reading-date.page-heading-small
			// @extends .no-margin
			// @extends .position-a
			// top 2em
			// right 2em
			font-size .85em

		.btn
			margin-bottom 1em

		textarea
			margin 1em 0

		.sensor-reading-unit, .sensor-reading-value
			@extends .float-l

		.sensor-reading-unit
			margin .5em

		.custom-dropdown-wrap
			margin 0

		select.custom-dropdown
			font-size .85em
			height 2.425em
			width 3.5em

		input[type="submit"]
			clear: both;
			width: 50%;
			margin-left: 0;

.garden-settings
	height 2em



.circle
	margin 1.5em 0
	svg
		max-width 100%

/* Large screens */
@media $mq_larger
	.dashboard

		.main header
			clear both
			overflow hidden

		.content-module
			@extends .display-ib
			&.middle
				// position relative
				// padding 100% 0 0 0 //must match container width
				// height 0
				width 60%
			&.side
				width 20%
		h2.page-heading
			float left
			width 75%
		
		.garden-settings
			float right
			height 1em
			i
				cursor pointer
				font-size 2.75em