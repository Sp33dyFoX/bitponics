@import "../global/colors"
@import "../helpers"
@import "../typography"


@keyframes led-indicator {
  0%, 100% {
    opacity:0;
  }
 
  50% {
    opacity:1
  }
}

.app-page.setup {
  * {
    color: color-text-gray
  }

  .content-module.middle {
    //padding 0
  }
  .page-heading-small {
    font-size 1em
    margin .35em 0
  }
  
  .unstyled-list {
    list-style none
    padding-left 0
  }

  .list-style {
    & > li {
      font-size 2.25em
    }
    p, label, button {
      font-size .5em
    }
    p, label {
      color color-text-gray
    }
  }
  
  .btn {
    margin-left 0
    
    &.loading {
      padding-bottom 1.8em
      text-align center
      .loading-meter{
        height 1em
        //width 20%
      }
    }
      
    .loading-meter {
      height 0
      position absolute
      width 0
      background color-logo-green
      bottom 0
      left 0
      transition all .5s ease-out
    }

    &.connect {
      min-width 13em
    }
      
  }

  .custom-dropdown-wrap {
    select.custom-dropdown {
      // font-size .65em //23px
      margin-top 0
      width 100%
      max-width 20em
      &:focus {
        border 1px solid white
      }
    }
  }

  .icon_device_led_red,
  .icon_device_led_blue,
  .icon_device_led_green {
    width 5em
    height 5em
  }


  
  
  .selectedNetworkSsid {
    font-style:italic;
  }

  input[readonly] {
    border 2px inset

    &:focus {
      background color-bg-gray
    }
  }

 .serial {
   width: 20em;
 } 
}
