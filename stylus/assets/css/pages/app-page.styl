.undefined, .app-page
	color color-text-gray

	.header
		position static
		padding .45em 0
		margin: 0 0 1em;
		
		header 
			max-width 120em

		.nav-section
			// display none
			padding 0

			&.first, &.app-user
				float: left;
				width: 48.499999%;


		h1.logo a, h1.logo span
			color color-logo-green

		.icon-glyphlogo-new
			display none
	.main
		max-width 120em
		margin 0 auto
		overflow hidden
		width 95%

	.footer
		min-height 0
		background white
	
	.label
		font-size .75em
	.value
		font-size 1.5em
		color color-text-gray

	.page-heading
		color color-text-gray
		font-size 1.25em
		// font-weight bold
		line-height 1.25em
		margin 0 0 .25em 0

	.page-heading-large
		// @extends .page-heading
		font-size 2em
		line-height 1.25em
		margin 0
		color color-text-gray
		border-width 0
		// font-weight bold
		span, input, div
			color color-text-gray
	
	.page-heading-small
		// @extends .page-heading
		color color-text-gray
		line-height 1.25em
		font-size: 1.5em;
		// font-weight: bold;
		line-height: 1em;
		font-size: 1.75em;

		&.starting-day 
			margin-top .5em
		
	.separator-top
		border-width 1px 0 0
		padding-top .25em
		margin-top .25em

	.dropdown
		margin 1em auto

	.app-user
		text-align right
		// position absolute
		// top 0
		// right 0
		// width 50%
		
		a
			color color-logo-green

		span
			font-size .85em

		.settings 
			position relative
			width 1.2em
			display inline-block
			cursor pointer

			.icon-19_settings
				color color-text-gray
				right: 0;
				top: 0;
				line-height: 1em;
				height: 1em;
				top: -.75em;
				font-size 1em
				position:absolute

			.settings-display 
				display none
				position absolute
				background color-logo-green
				color white

				&.visible
					display block
					top .5em
					right 0
					min-width 12em
					padding 0 1em 1em
					text-align left

					h2
						margin .5em 0
						border-bottom 1px solid white
					
					li 
						display block
						margin 0
					a
						text-align left
						color white
						margin 0
						line-height 2em


	.flexslider
		border-radius 0
		box-shadow none

@media screen and (min-width: 40em)
	.undefined, .app-page
		.main
			.page-heading
				line-height 1.25em


@media screen and (min-width: 60em)
	.undefined, .app-page
		.overlay.auto-size
			left 25%
			right 25%
			width 50%
			