.home

  #main, .header
    padding 0

  .header
    & > header
      margin: 0 auto;
      max-width: 60em;

    li
      &.first
        width: 19.3%;
        margin: 0 .5% 0 0;

    .elevated-item, .social-icons
      position absolute
      top 0
      right 0

    .elevated-item
      text-align left
      width 15%
      margin 0
      right 15%

    .social-icons
      width 16%
      overflow hidden
      margin 0

    .headline
      margin-right 26%
