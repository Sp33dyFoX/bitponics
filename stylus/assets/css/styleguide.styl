@import "./libs/resets"
@import "./global/utils"
@import "./global/icons"
@import "helpers"

color-logo-green=#23b500
color-medium-green=#24d321
color-light-green=#46f121
color-global-background=#fff
color-sensor-light=#c8c300

/*
 * styleguide specific
 */
.styleguide
	
	background rgba(70, 241, 33, 0.45)
	
	ul {
	  margin: 1em 0;
	  padding: 0;
	  list-style none
	  & li {
	    list-style-type none
	  }
	}
	.colors
		.main-heading
			background-color color-main-heading
		.sub-heading
			background-color color-sub-heading
	.heading
		//
	section.colors
		//
	//section.layout
	section.wrapper
		background-color color-global-background
		padding 1em
	li
		padding 1em
	.default-background
		background-color color-global-background
	.logo
		background-color color-logo-green
	.bitponics-light-green
		background-color color-light-green
	.bitponics-medium-green
		background-color color-medium-green
	.color
		padding 1em
		width 1em
		height 1em
		@extends .circle

@import "base"

