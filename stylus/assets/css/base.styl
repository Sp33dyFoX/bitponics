/*
 * Icons
 */
.icon
	display inline-block
	div,a
		text-transform lowercase

/*
 * Default list style
 */
.list-style {
 	list-style-position inside
 	margin 0
 	padding 0
 	ul {
		list-style-type circle
		list-style-position inside
		padding-left 1em
	}
	ol {
		list-style-type lower-latin
		list-style-position inside
		padding-left 1em
	}
}
ul.list-style
	list-style-type disc
ol.list-style
	list-style-type decimal
.list-continue-3 {
	counter-reset: 3;
}
.list-continue-4 {
	counter-reset: 4;
}

/*
 * Generic Button Style
 */
.btn
	@extends .display-ib
	padding 1em
	margin 1em
	background color-hot-green
	color white
	cursor pointer

	// &:hover
	// 	background color-medium-green
	// 	color white
	// &:active
	// 	background lighten(color-medium-green, 10%)
	// 	color white

	& *
		@extends .display-ib
		margin 0

	&.sub
		background color-light-green

	&.clear
		display block
		clear both
		margin 0

	&.add
		border 0 none

.page-content
	.center
		width: 100%;
		clear: both;
		text-align: center;
		float: right;
		margin 0

a.btn, button.btn
	display inline-block
	background white!important
	color color-medium-green!important
	border 3px solid color-medium-green
	i
		margin: 0 0 0 .5em;

button.btn
	&:hover
		text-decoration underline

.step
	padding 3em 0 0

/*
 * Visualizer
 */
#visualizer
	div.circle
		//background-color color-medium-green
		position: absolute;
		top .75em
		left .75em
		bottom .75em
		right .75em

/*
 * controls
 */
.control
	@extends .display-ib
	width 8em
	height 10em
	position relative
	text-align center
	color color-medium-green
	font-weight bold
	margin: 0 0 1em;

	&:before
		position: absolute;
		padding-top: 3.35em;
		width: 100%;
		top: 0;
		left: 0;
		font-size: 1.5em;

	svg
		position absolute
		top 2em
		left 0


