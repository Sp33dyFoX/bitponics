.toggle {
	position: absolute;
	top: 0;
	right: 0;
	font-size: 1.25em;
	
	.add, .remove {
		padding: 0 .25em;
		margin: 0;
		background: none;
	}

	.add {
		display: none;
	}

	.remove {
		display: block;
	}
}

.focused {
	border: 1px solid red;
	height: auto;
}

.active {
	float: left;
	height: 3em;
}

.inactive {
	opacity: .45;
	height: 3em;

	.toggle {
		.add { display: block; }
		.remove { display: none; }
	}
}

