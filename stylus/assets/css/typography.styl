medium-white #f4f4f4
dark-gray #333
gray #dfdfdf

// Overriding Compass font-face mixin to support font-weight
font-face(name, font-files, eot= false, weight= false, style= false)
  iefont unquote("#{$eot}?iefix")
  @font-face
    font-family quote($name)
    @if eot {
      src: font-url($eot);
      font-files: font-url($iefont) unquote("format('eot')"), $font-files;
    }
    @if weight { font-weight weight; }
    @if style { font-style style; }
    src: font-files;

font-face("DIN", font-files("din_medium.woff", woff, "din_medium.ttf", truetype, "din_medium.svg", svg), "din_medium.eot");
font-face("DIN", font-files("din_bold.woff", woff, "din_bold.ttf", truetype, "din_bold.svg", svg), "din_medium.eot", bold);

