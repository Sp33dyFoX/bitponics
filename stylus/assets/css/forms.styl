/*
 * Forms
 */


label, input
	display block
	margin 1em 0

label
	// font-weight bold
	margin-bottom 0

label.inline, input.inline
	display inline
	vertical-align text-top

input.inline
	vertical-align baseline

input, textarea
	margin-top 0
	background-color color-bg-gray
	border none
	// border 1px solid color-hot-green
	padding .75em
	color color-text-gray

input:valid, textarea:valid, input:invalid, textarea:invalid
	//background color-hot-green
	background-color color-bg-gray

input:focus, textarea:focus
	background-color white
	color black

input[type=submit]
	background white
	color color-hot-green
	border 4px solid color-hot-green
	font-size 1.5em

button
	background white
	color color-hot-green
	//border none

select
	display block
	margin .5em 0 0
	max-width 14em

textarea
	width 100%
	min-height 4em
	// padding .25em .5em

input[type=radio], input[type=checkbox]
	display none
	opacity 0
	height 0
	width 0
	margin 0

input[type='radio']:checked + label,
input[type='checkbox']:checked + label
	display block

.question
	margin: 0 0 3em;
.question-title
	//

.dropdown-wrap
	position relative
	min-height: 1em;

.dropdown
	position: absolute;
	top 0
	left 0
	width: 200px;
	padding: 10px;
	margin: 0 auto;
	background: color-hot-green;
	color: #fff;
	outline: none;
	cursor: pointer;
	font-weight: bold;
	min-height: 1em;

	&.initial
		.select label
			display block
			padding .25em .5em

	&.open
		z-index 1
		label
			display block

		input[type='radio'] + label,
		input[type='checkbox'] + label
			display block

			&:after
				display none

	label
		display none
		position relative
		padding .25em .5em
		margin 0
		&:after
			right: .5em;
			top: 44.55%;
			create-triangle('down', 5px, white)

	.select label
		&:after
			content: '';

		&:after
			content: '';

