/**
 * Creates a flyout menu with dialog behavior (closes if user clicks outside)
 * Designed only to be used with ngdialog option of "appendToElement" set to true
 */

.ngdialog-theme-menu

	// &.ngdialog-closing, 
	// &.ngdialog-closing .ngdialog-overlay,
	// &.ngdialog-closing .ngdialog-content,
	// .ngdialog-content	
	// 	-webkit-animation-duration 0
	// 	animation-duration 0

	top 1.2em
	right 0
	left auto
	bottom auto
	position absolute


	.ngdialog-overlay
		background none

	.ngdialog-content
		width 20em
		background white
		color color-text-gray
		padding 0
		text-align left
		z-index 1
		border 1px solid color-border-gray
		box-shadow 0px 2px 5px 0px color-border-gray


		h2, div, p, a 
			color color-text-gray

		h2
			padding-top .5em
			margin 0 0 .5em
			border-bottom 1px solid color-border-gray


	.ngdialog-close
		display none


/**
 * Notifications menu
 */
.ngdialog-theme-menu .ngdialog-content .notifications 
	
	h2
		padding .5em
		margin 0

	.notifications-list
		.notification
			display block
			margin 0
			padding 0
			border-left 5px solid color-logo-green
			margin-bottom 5px

			&.warning
				border-left-color color-bg-orange

			&.checked
				border-left-color color-bg-gray

			.notification-button
				display block
				background none
				padding 0 1em
				border none
				outline none
				text-align left
				border-bottom 1px solid white
				width 100%

			
