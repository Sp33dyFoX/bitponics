.overlay
	position absolute
	// position fixed
	top 5em
	left 10%
	background white
	border 3px solid color-text-gray-sep
	width 80%
	right 10%
	z-index 5
	overflow hidden
	padding 1em 2em 1em

	.close
		position absolute
		top 0
		right 0
		cursor pointer
		background white
		color black

	.page-heading
		text-align center
		border 0 none!important

	dd
		color black

	.pagination
		text-align: center;
		clear both
		margin 2em 0 0
		
		li
			@extends .display-ib
			margin 0 .5em

			&.active
				float none
				font-weight bold
				font-size 1.25em

	input[type='radio']:checked + label,
	input[type='checkbox']:checked + label
		color white!important
		background color-hot-green!important