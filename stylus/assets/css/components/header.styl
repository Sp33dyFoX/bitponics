.header
	.notifications-icon,
	.help-icon,
	.menu-icon
		position relative
		display inline-block
		cursor pointer
		width 1.4em
		vertical-align middle
		height 1.4em

		.icon-glyph
			top: 50%;
			margin: 0;
			position: absolute;
			width: 100%;
			height: 100%;
			left: 0;
			-webkit-transform: translateY(-50%);
			transform: translateY(-50%);



