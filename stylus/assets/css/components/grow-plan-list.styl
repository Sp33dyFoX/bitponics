.grow-plan-list
	.grow-plan-list-item
		
		text-align center

		h3
			font-size 2em
			margin-top .2em
		
		.value
			font-size 1em
			margin .5em 0
		
		p
			font-size 1em
			margin .5em 0

		.plantlist li 
			display inline

		.btn
			display block
			margin 0 auto
			width 50%

		.img-wrapper
			position relative
			height 0
			padding-bottom 100%

			.plant-grid-image
				float left
				width 100%
				height 0
				padding-bottom 100%
				background-position center
				/* Make the background image cover the area of the <div>, and clip the excess */
				background-size cover
				box-sizing border-box
				border 2px solid white
				padding-top 12px

			.icon-glyph
				height: 5em;
				width: 5em;
				background-position: -1em 0;

			&.grid-4 .plant-grid-image
				width 50%
				padding-bottom 50%
				padding-top 4px
				
			&.grid-16 .plant-grid-image
				width 25%
				padding-bottom 25%
				padding-top 0

